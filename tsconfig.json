{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "removeComments": false,
    "rootDir": "src",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2018", "dom"],
    "types": ["reflect-metadata"],
    "typeRoots": ["node_modules/@types", "node_modules/@types/node"],
    "moduleResolution": "Node",
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
